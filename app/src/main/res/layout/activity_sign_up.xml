<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3BB94B"
    tools:context="com.example.matthew.homework4.signUpActivity"
    android:id="@+id/x"
    android:gravity="center_vertical">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        android:id="@+id/loading"/>

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/UsernameBlank"
        android:hint="Username"
        android:layout_gravity="top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:padding="20dp"
        android:background="@drawable/loginedittexttopcurve"
        android:textColor="#fff"
        android:textColorHint="#ecf0f1"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordBlank"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@+id/UsernameBlank"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/loginedittextnocurve"
        android:singleLine="false"
        android:password="false"
        android:textColor="#fff"
        android:textColorHint="#ecf0f1"
        android:textSize="20sp"
        android:fontFamily="Roboto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordBlank2"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_below="@+id/PasswordBlank"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/loginedittextnocurve"
        android:singleLine="false"
        android:password="false"
        android:textColor="#fff"
        android:textColorHint="#ecf0f1"
        android:textSize="20sp"
        android:fontFamily="Roboto" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/EmailBlank"
        android:hint="Email"
        android:layout_below="@+id/PasswordBlank2"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:padding="20dp"
        android:background="@drawable/loginedittextnocurve"
        android:textColor="#fff"
        android:textColorHint="#ecf0f1"
        android:textSize="20sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School"
        android:textAllCaps="false"
        android:id="@+id/SchoolBlank"
        android:background="@drawable/loginedittextnocurve"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_below="@+id/EmailBlank"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:fontFamily="Roboto"
        android:gravity="left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role"
        android:textAllCaps="false"
        android:id="@+id/roleButton"
        android:background="@drawable/loginedittextbottomcurve"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_below="@+id/SchoolBlank"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:fontFamily="Roboto"
        android:gravity="left" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/join"
        android:id="@+id/tv4"
        android:textSize="40dp"
        android:textColor="#fff"
        android:fontFamily="Roboto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subtitle"
            android:id="@+id/textView2"
        android:textSize="23dp"
        android:textStyle="italic"
        android:textColor="#fff"
        android:layout_below="@+id/tv4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roleButton"
        android:text="@string/create"
        android:id="@+id/CreateButton"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/loginbutton"
        android:textColor="#3BB94B"
        android:fontFamily="Roboto"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"

        android:layout_alignRight="@+id/SchoolBlank"
        android:layout_alignEnd="@+id/SchoolBlank" />


</RelativeLayout>
