<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Friend"
        android:id="@+id/achievesTitle"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/achievesPic"
        android:layout_toEndOf="@+id/achievesPic" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/achievesPic"
        android:background="@drawable/loginbutton"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/achievesSubtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/achievesSubtitle"
        android:textSize="18dp"
        android:layout_below="@+id/achievesTitle"
        android:layout_alignLeft="@+id/achievesTitle"
        android:layout_alignStart="@+id/achievesTitle" />

</RelativeLayout>